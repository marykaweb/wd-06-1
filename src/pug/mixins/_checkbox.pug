mixin checkbox(text,id,checked)
	.checkbox
		label
			input(type='checkbox', class='form-input_checkbox', id=id, checked=checked)
			span(class='form-checkbox_box')
			span(class='label_text') #{text}      

mixin checkboxNew(text, checked)
	.checkbox
		label
			if checked
				input(type='checkbox', class='form-input_checkbox', checked)
			else
				input(type='checkbox', class='form-input_checkbox',)
			span(class='form-checkbox_box')
			span(class='label_text') #{text}      