extends ../../layouts/ui-layout/ui-layout.pug

block variables
    - var title = 'Поля ввода - UI-kit и HTML фреймворк - Документация';
    - var pageClass = 'body--dashboard';

block content
    .main-wrapper
        .container.container--left.user-content.pt-35
            h1 Поля ввода

            .section-ui
                +textarea('Парк находится в горах Сьерра-Невада на востоке штата Калифорния и занимает огромную даже для Америки площадь, около 3000 кв. км. На этой площади расположены гранитные скальные стены огромной высоты, которыми, собственно, в первую очередь и знаменит парк, водопады, среди которых одни из самых высоких в США, три рощи гигантской секвойи — самого долгоживущего в мир ')
            pre.
                +textarea('Парк находится в горах ')

            .title mixins/_formElem.pug
            pre.
                mixin textarea(placeholder)
                    textarea.textarea(placeholder= placeholder)

            h1 Input
            .section-ui
                +input('Введите имя')
            pre.
                +input('Введите имя')
            .title  mixins/_input.pug
                pre.
                    mixin input(placeholder)
                        input.formElem_input(placeholder= placeholder)