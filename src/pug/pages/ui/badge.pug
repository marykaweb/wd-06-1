extends ../../layouts/ui-layout/ui-layout.pug

block variables
    - var title = 'Вспомогательные элементы - UI-kit и HTML фреймворк - Документация';
    - var pageClass = 'body--dashboard';

block content
    .main-wrapper
        .container.container--left.user-content.pt-35
            h1 Вспомогательные элементы

            .section-ui
                +badge('Бэйдж', 'Пользователь', '#!')
            pre.
                +badge('Бэйдж', 'Пользователь', '#!')

            .title mixins/_badge.pug
            pre.
                mixin badge(badge, text, link)
                    .title-4 #{badge}
                    a(class="badge" href= link)&attributes(attributes) #{text}